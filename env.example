# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
EMBEDDING_MODEL=text-embedding-ada-002

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
PINECONE_INDEX_NAME=handit-ai-docs
PINECONE_NAMESPACE=default

# PostgreSQL Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=handit_ai
DB_USER=postgres
DB_PASSWORD=your_password_here

# Server Configuration
PORT=3000
NODE_ENV=development

# API Configuration
API_BASE_URL=http://localhost:3000/api

# API Integration Configuration
# Required: API URL for external service integration
API_URL=https://api.example.com
# Optional: Default API key (users can provide their own via Authorization header)
API_KEY=your_default_api_key_here

# Handit.ai Configuration
HANDIT_DOCS_URL=https://docs.handit.ai

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Vector Database Configuration  
CHUNK_SIZE=2000
CHUNK_OVERLAP=300
MAX_RESULTS=5

# Advanced Chunking Configuration
PRESERVE_CODE_BLOCKS=true
PRESERVE_SECTIONS=true
CONTEXT_PRESERVATION=true
MIN_CHUNK_SIZE=200

# Database URL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/handit_ai 